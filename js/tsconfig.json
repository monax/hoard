{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "module": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "declaration": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "paths": {
      "*": [
        "./types/*"
      ]
    },
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "src/test/*",
    "src/examples.ts",
    "src/openpgp.ts"
  ]
}
